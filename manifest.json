{
    "manifest_version": 3,
    "name": "Kaito Reminder",
    "version": "1.0",
    "default_locale": "en", // Добавлено: язык по умолчанию
    "permissions": ["alarms", "storage", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }